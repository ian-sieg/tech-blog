<h1>Login</h1>

<div class="column is-half is-offset-one-quarter">
    <div id="login-block">
        <h2>Login</h2>
        <hr>
        <form class="login-form">
            <div class="field">
                <label class="label"><i class="fa-solid fa-user"></i> Username</label>
                <div class="control">
                    <input class="input" type="text" id="username-login">
                </div>
            </div>
            <div class="field">
                <label class="label"><i class="fa-solid fa-lock"></i> Password</label>
                <div class="control">
                    <input class="input" type="password" id="password-login">
                </div>
            </div>
            <div class="control">
                <button class="button is-link">Login</button>
            </div>
            <br>
            <div class="control">
                <a id="signup-instead"><b>Don't have an account? Sign up instead</b></a>
            </div>
        </form>
    </div>

    <div id="signup-block" class="invis">
        <h2>Signup</h2>
        <hr>
        <form class="signup-form">
            <div class="field">
                <label class="label"><i class="fa-solid fa-user"></i> Username</label>
                <div class="control">
                    <input class="input" type="text" id="username-signup">
                </div>
            </div>
            <div class="field">
                <label class="label"><i class="fa-solid fa-lock"></i> Password</label>
                <div class="control">
                    <input class="input" type="password" id="password-signup">
                </div>
            </div>
            <div class="control">
                <button class="button is-primary"><b>Sign Up</b></button>
            </div>
        </form>
    </div>
</div>

<script src="./js/login.js"></script>